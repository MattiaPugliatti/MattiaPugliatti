@inproceedings{buonagura2022procedural,
  bibtex_show = {true},
  title = {Procedural Minor Body Generator Tool for Data-Driven Optical Navigation Methods},
  author = {Buonagura, Carmine and Pugliatti, Mattia and Topputo, Francesco},
