@inproceedings{pugliatti2024dfki,
  bibtex_show={true},
  title={A Small Body Open-Source Dataset for Image Processing Algorithms},
  author={Mattia Pugliatti and Shubham Vyas and Marko Jankovic and Francesco Topputo},
  booktitle = {7th CEAS Specialist Conference on Guidance, Navigation and Control-EuroGNC},
